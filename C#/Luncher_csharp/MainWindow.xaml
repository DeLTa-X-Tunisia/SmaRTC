<Window x:Class="Luncher_csharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:Luncher_csharp"
        Title="SmaRTC C# Example Launcher" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolConverter x:Key="InverseBool"/>
        <local:LogLevelToBrushConverter x:Key="LogLevelBrush"/>
        
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style x:Key="ClientCard" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="ðŸŽ¯ SmaRTC C# Example Launcher"
                               FontSize="26" FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="DÃ©monstration du SDK C# avec deux clients de chat"
                               FontSize="14" Foreground="#888" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“– Swagger" 
                            Click="OpenSwagger_Click"
                            Margin="0,0,10,0"
                            Style="{StaticResource DefaultButtonStyle}"/>
                    <Button Content="ðŸ”„ Refresh"
                            Click="Refresh_Click"
                            Style="{StaticResource DefaultButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Connection Status -->
        <Border Grid.Row="1" Background="#2D2D30" Margin="15,10" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusText}" 
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <Border Background="#333" CornerRadius="6" Padding="12,6" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Style="{StaticResource StatusIndicator}"
                                     Fill="{Binding IsApiConnected, Converter={StaticResource LogLevelBrush}}"/>
                            <TextBlock Text="API Server" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#333" CornerRadius="6" Padding="12,6" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Style="{StaticResource StatusIndicator}"
                                     Fill="{Binding IsSignalConnected, Converter={StaticResource LogLevelBrush}}"/>
                            <TextBlock Text="Signal Server" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <ui:ProgressRing Grid.Column="2" 
                                 IsActive="{Binding IsLoading}"
                                 Width="24" Height="24"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="15,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Client 1 Card -->
            <Border Grid.Column="0" Style="{StaticResource ClientCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="20" Height="20" Fill="{StaticResource Client1Brush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Client 1" FontSize="22" FontWeight="Bold" 
                                       Foreground="{StaticResource Client1Brush}"/>
                        </StackPanel>
                        <TextBlock Text="Premier participant du chat" 
                                   Foreground="#888" FontSize="13" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="8" Padding="15" Margin="0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ðŸ‘¤ Nom:" Foreground="#888" Margin="0,5"/>
                            <TextBlock Grid.Column="1" Text="Client1" Foreground="White" FontWeight="SemiBold" Margin="10,5"/>

                            <TextBlock Grid.Row="1" Text="ðŸ  Room:" Foreground="#888" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Room_csharp" Foreground="White" FontWeight="SemiBold" Margin="10,5"/>

                            <TextBlock Grid.Row="2" Text="ðŸ”‘ Password:" Foreground="#888" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="12345678" Foreground="White" FontWeight="SemiBold" Margin="10,5"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" VerticalAlignment="Center">
                        <Ellipse Width="80" Height="80" 
                                 Fill="{Binding IsClient1Running, Converter={StaticResource LogLevelBrush}}"
                                 HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="{Binding IsClient1Running, Converter={StaticResource InverseBool}}"
                                   HorizontalAlignment="Center" Foreground="#888" Margin="0,10,0,0"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="â–¶ï¸ DÃ©marrer" 
                                Width="120" Height="40"
                                Click="LaunchClient1_Click"
                                IsEnabled="{Binding CanLaunchClients}"
                                Visibility="{Binding IsClient1Running, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"
                                Background="{StaticResource Client1Brush}"
                                Foreground="Black" FontWeight="Bold"/>
                        <Button Content="â¹ï¸ ArrÃªter" 
                                Width="120" Height="40"
                                Click="StopClient1_Click"
                                Visibility="{Binding IsClient1Running, Converter={StaticResource BoolToVis}}"
                                Background="#F44336"
                                Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Client 2 Card -->
            <Border Grid.Column="1" Style="{StaticResource ClientCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="20" Height="20" Fill="{StaticResource Client2Brush}" Margin="0,0,10,0"/>
                            <TextBlock Text="Client 2" FontSize="22" FontWeight="Bold" 
                                       Foreground="{StaticResource Client2Brush}"/>
                        </StackPanel>
                        <TextBlock Text="DeuxiÃ¨me participant du chat" 
                                   Foreground="#888" FontSize="13" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="8" Padding="15" Margin="0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ðŸ‘¤ Nom:" Foreground="#888" Margin="0,5"/>
                            <TextBlock Grid.Column="1" Text="Client2" Foreground="White" FontWeight="SemiBold" Margin="10,5"/>

                            <TextBlock Grid.Row="1" Text="ðŸ  Room:" Foreground="#888" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Room_csharp" Foreground="White" FontWeight="SemiBold" Margin="10,5"/>

                            <TextBlock Grid.Row="2" Text="ðŸ”‘ Password:" Foreground="#888" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="12345678" Foreground="White" FontWeight="SemiBold" Margin="10,5"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" VerticalAlignment="Center">
                        <Ellipse Width="80" Height="80" 
                                 Fill="{Binding IsClient2Running, Converter={StaticResource LogLevelBrush}}"
                                 HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="{Binding IsClient2Running, Converter={StaticResource InverseBool}}"
                                   HorizontalAlignment="Center" Foreground="#888" Margin="0,10,0,0"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="â–¶ï¸ DÃ©marrer" 
                                Width="120" Height="40"
                                Click="LaunchClient2_Click"
                                IsEnabled="{Binding CanLaunchClients}"
                                Visibility="{Binding IsClient2Running, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"
                                Background="{StaticResource Client2Brush}"
                                Foreground="White" FontWeight="Bold"/>
                        <Button Content="â¹ï¸ ArrÃªter" 
                                Width="120" Height="40"
                                Click="StopClient2_Click"
                                Visibility="{Binding IsClient2Running, Converter={StaticResource BoolToVis}}"
                                Background="#F44336"
                                Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer / Logs -->
        <Border Grid.Row="3" Background="#252526" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ðŸ“‹ Logs" FontSize="14" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>

                    <Button Grid.Column="1" Content="ðŸš€ Lancer les deux" 
                            Click="LaunchBoth_Click"
                            IsEnabled="{Binding CanLaunchClients}"
                            Margin="0,0,10,0"
                            Background="#4CAF50" Foreground="White"/>
                    
                    <Button Grid.Column="2" Content="ðŸ—‘ï¸ Effacer" 
                            Click="ClearLogs_Click"/>
                </Grid>

                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Logs}"
                         Background="#1E1E1E"
                         BorderThickness="0"
                         Margin="0,10,0,0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText}" 
                                       Foreground="{Binding LevelColor}"
                                       FontFamily="Consolas"
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>

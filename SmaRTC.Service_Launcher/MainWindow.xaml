<Window x:Class="SmaRTC.Service_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:vm="clr-namespace:SmaRTC.Service_Launcher.ViewModels"
        mc:Ignorable="d"
        Title="ðŸš€ SmaRTC Service Launcher" 
        Height="750" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ“¡" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="SmaRTC Service Launcher" FontSize="24" FontWeight="Bold"/>
                            <TextBlock Text="Smart Real-Time Communication Platform" 
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Global Status -->
                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                            CornerRadius="6" Padding="12,8" Margin="0,8,0,0" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding GlobalStatus}" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{Binding GlobalStatusColor}"/>
                            <TextBlock Text=" â€” " Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Text="{Binding RunningCount}" FontWeight="Bold"/>
                            <TextBlock Text="/"/>
                            <TextBlock Text="{Binding TotalCount}"/>
                            <TextBlock Text=" services" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding StartAllCommand}" 
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Style="{StaticResource AccentButtonStyle}"
                            Padding="16,10" Margin="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â–¶ï¸" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="DÃ©marrer"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding StopAllCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Padding="16,10" Margin="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â¹ï¸" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="ArrÃªter"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding RestartAllCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Padding="16,10" Margin="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="RedÃ©marrer"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding RefreshCommand}" 
                            Padding="10" Margin="4" ToolTip="RafraÃ®chir">
                        <TextBlock Text="ðŸ”ƒ" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Services List -->
            <Border Grid.Column="0" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ–¥ï¸ Services" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Services}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ServiceCardStyle}" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <TextBlock Grid.Column="0" Text="{Binding Icon}" 
                                                       FontSize="28" VerticalAlignment="Center"/>

                                            <!-- Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           FontSize="12"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="Port: " FontSize="11" 
                                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                                    <TextBlock Text="{Binding Port}" FontSize="11" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Status Message -->
                                            <TextBlock Grid.Column="2" Text="{Binding StatusMessage}"
                                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                       VerticalAlignment="Center" FontSize="11"
                                                       Margin="0,0,12,0"/>

                                            <!-- Status Icon -->
                                            <Border Grid.Column="3" 
                                                    Background="{Binding StatusColor}" 
                                                    CornerRadius="4" Padding="8,4"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding StatusIcon}" 
                                                           HorizontalAlignment="Center" FontSize="16"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Logs Panel -->
            <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                    CornerRadius="8" Padding="12" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ“‹ Logs" FontSize="16" FontWeight="SemiBold"/>
                        <Button Command="{Binding ClearLogsCommand}" 
                                Padding="6,2" Margin="12,0,0,0"
                                Background="Transparent">
                            <TextBlock Text="ðŸ—‘ï¸ Effacer" FontSize="11"/>
                        </Button>
                    </StackPanel>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Logs}" 
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="4,2" Margin="0,1">
                                    <TextBlock Text="{Binding DisplayText}" 
                                               TextWrapping="Wrap"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Foreground="{Binding LevelColor}"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Quick Links -->
                    <StackPanel Grid.Row="2" Margin="0,12,0,0">
                        <TextBlock Text="ðŸ”— Liens rapides" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <WrapPanel>
                            <Button Command="{Binding OpenSwaggerCommand}" 
                                    Padding="8,4" Margin="0,0,8,4" FontSize="11">
                                <TextBlock Text="ðŸ“˜ Swagger"/>
                            </Button>
                            <Button Command="{Binding OpenGrafanaCommand}" 
                                    Padding="8,4" Margin="0,0,8,4" FontSize="11">
                                <TextBlock Text="ðŸ“Š Grafana"/>
                            </Button>
                            <Button Command="{Binding OpenApiCommand}" 
                                    Padding="8,4" Margin="0,0,8,4" FontSize="11">
                                <TextBlock Text="ðŸŒ API Health"/>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Loading indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ui:ProgressRing IsActive="True" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusText}" VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                <!-- Docker Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="ðŸ³ Docker: " VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding IsDockerAvailable, Converter={StaticResource DockerStatusConverter}}" 
                               VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ui:ProgressRing IsActive="True" Width="60" Height="60"/>
                <TextBlock Text="{Binding StatusText}" Margin="0,16,0,0" FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <local:InverseBoolConverter x:Key="InverseBoolConverter" 
                                    xmlns:local="clr-namespace:SmaRTC.Service_Launcher.Converters"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"
                                                 xmlns:local="clr-namespace:SmaRTC.Service_Launcher.Converters"/>
        <local:DockerStatusConverter x:Key="DockerStatusConverter"
                                     xmlns:local="clr-namespace:SmaRTC.Service_Launcher.Converters"/>
    </Window.Resources>
</Window>

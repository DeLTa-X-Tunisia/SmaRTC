<Window x:Class="Luncher_Python.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="SmaRTC Python Launcher" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ SmaRTC Python Launcher" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Lancez et gÃ©rez l'exemple Python de chat" Foreground="Gray" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Python Info -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="12" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="ðŸ”§ Configuration Python" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding PythonInfo}" Foreground="#888"/>
            </StackPanel>
        </Border>

        <!-- Controls -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="12" Height="12" Margin="0,0,8,0"
                         Fill="{Binding StatusColor}"/>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ClientCountText}" Margin="16,0,0,0" 
                           Foreground="#888" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" Content="ðŸ“¦ Installer deps" Margin="8,0" Padding="12,8"
                    Command="{Binding InstallCommand}"
                    IsEnabled="{Binding CanInstall}"/>
            
            <Button Grid.Column="2" Content="â–¶ Client 1" Margin="8,0" Padding="16,8"
                    Command="{Binding StartCommand}"
                    IsEnabled="{Binding CanStart}"
                    Style="{StaticResource AccentButtonStyle}"/>
            
            <Button Grid.Column="3" Content="âž• Nouveau client" Margin="8,0" Padding="12,8"
                    Command="{Binding StartAnotherCommand}"
                    IsEnabled="{Binding IsRunning}"/>
            
            <Button Grid.Column="4" Content="â¹ ArrÃªter tout" Margin="8,0" Padding="16,8"
                    Command="{Binding StopCommand}"
                    IsEnabled="{Binding IsRunning}"/>
        </Grid>

        <!-- Console Output -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="8" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ“‹ Console" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Content="ðŸ“‹ Copier" Margin="16,0,0,0" Padding="8,4"
                            Command="{Binding CopyLogsCommand}" FontSize="12"/>
                    <Button Content="ðŸ—‘ Effacer" Margin="8,0,0,0" Padding="8,4"
                            Command="{Binding ClearLogsCommand}" FontSize="12"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" x:Name="ConsoleScroller"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}" 
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#00FF00"
                             FontFamily="Cascadia Code, Consolas, Courier New"
                             FontSize="12"
                             IsReadOnlyCaretVisible="True"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Footer Info -->
        <StackPanel Grid.Row="4" Margin="0,16,0,0">
            <TextBlock Text="â„¹ï¸ L'application Python s'exÃ©cute en mode console interactive" 
                       Foreground="Gray" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>

{
  "dashboard": {
    "id": null,
    "uid": "smartc-alerts",
    "title": "SmaRTC Zero-Cost - Alerts & SLA",
    "tags": ["smartc", "alerts", "sla", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "ðŸŽ¯ System Uptime",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(time() - process_start_time_seconds{job=\"smartc\"}) / 86400",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "d",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "yellow" },
                { "value": 7, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "type": "gauge",
        "title": "ðŸ“Š SLA Compliance (Last 24h)",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "100 * (1 - (sum(increase(smartc_errors_total[24h])) / sum(increase(smartc_requests_total[24h]))))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 99.5, "color": "yellow" },
                { "value": 99.9, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "ðŸš¨ Active Alerts",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "âš ï¸ Capacity Status",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(sum(smartc_active_connections) / sum(smartc_max_connections)) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 85, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "type": "table",
        "title": "ðŸ”¥ Firing Alerts",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "alertstate": true
              },
              "renameByName": {
                "alertname": "Alert",
                "severity": "Severity",
                "instance": "Instance",
                "Value": "Status"
              }
            }
          }
        ],
        "options": {
          "sortBy": [
            {
              "displayName": "severity",
              "desc": true
            }
          ]
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "ðŸ“ˆ Alert History",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum by(alertname)(ALERTS{alertstate=\"firing\"})",
            "refId": "A",
            "legendFormat": "{{alertname}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 7,
        "type": "stat",
        "title": "âš¡ High Latency Incidents (>200ms)",
        "gridPos": { "x": 0, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(smartc_request_duration_seconds_bucket{le=\"0.2\"}[1h])) < bool sum(increase(smartc_request_duration_seconds_count[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 8,
        "type": "stat",
        "title": "ðŸ’¥ Connection Failures (Last Hour)",
        "gridPos": { "x": 6, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(smartc_connection_errors_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 10, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 9,
        "type": "stat",
        "title": "ðŸ§Š Memory Pressure Alert",
        "gridPos": { "x": 12, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "max(container_memory_usage_bytes{name=~\".*signal.*\"}) / 1024 / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.8, "color": "yellow" },
                { "value": 1.2, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 10,
        "type": "stat",
        "title": "ðŸ”¥ CPU Throttling Events",
        "gridPos": { "x": 18, "y": 12, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(container_cpu_cfs_throttled_periods_total{name=~\".*signal.*\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 1000, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 11,
        "type": "timeseries",
        "title": "ðŸ“‰ Error Rate Trends",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "sum(rate(smartc_errors_total[5m])) by (error_type) * 60",
            "refId": "A",
            "legendFormat": "{{error_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 15
            }
          }
        }
      },
      {
        "id": 12,
        "type": "timeseries",
        "title": "âš–ï¸ Load Balancer Health",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "haproxy_backend_status{backend=~\"signal_servers\"}",
            "refId": "A",
            "legendFormat": "{{server}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter"
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": { "text": "DOWN", "color": "red" },
                  "1": { "text": "UP", "color": "green" }
                }
              }
            ]
          }
        }
      },
      {
        "id": 13,
        "type": "bargauge",
        "title": "ðŸŽ¯ Instance Health Scores",
        "gridPos": { "x": 0, "y": 22, "w": 24, "h": 6 },
        "targets": [
          {
            "expr": "100 * (1 - (rate(smartc_errors_total[5m]) / rate(smartc_requests_total[5m])))",
            "refId": "A",
            "legendFormat": "Instance {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 95, "color": "yellow" },
                { "value": 99, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal",
          "showUnfilled": true
        }
      },
      {
        "id": 14,
        "type": "table",
        "title": "â±ï¸ Slowest Operations (P99 > 500ms)",
        "gridPos": { "x": 0, "y": 28, "w": 24, "h": 6 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.99, sum by (operation, le) (rate(smartc_operation_duration_seconds_bucket[5m]))))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "operation": "Operation",
                "Value": "P99 Latency (s)"
              }
            }
          },
          {
            "id": "filterByValue",
            "options": {
              "filters": [
                {
                  "fieldName": "P99 Latency (s)",
                  "config": {
                    "id": "greater",
                    "options": {
                      "value": 0.5
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(process_start_time_seconds{job=\"smartc\"}[1m]) > 0",
          "tagKeys": "instance",
          "textFormat": "Restart detected",
          "iconColor": "blue"
        },
        {
          "name": "Alerts Triggered",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertstate=\"firing\"}",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}",
          "iconColor": "red"
        }
      ]
    }
  },
  "overwrite": true
}

<Window x:Class="Luncher_TypeScript.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="SmaRTC TypeScript Launcher" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸŸ¦ SmaRTC TypeScript Launcher" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Lancez et gÃ©rez l'exemple TypeScript de chat" Foreground="Gray" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="12" Height="12" Margin="0,0,8,0"
                         Fill="{Binding StatusColor}"/>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" Content="â–¶ DÃ©marrer" Margin="8,0" Padding="16,8"
                    Command="{Binding StartCommand}"
                    IsEnabled="{Binding CanStart}"
                    Style="{StaticResource AccentButtonStyle}"/>
            
            <Button Grid.Column="2" Content="â¹ ArrÃªter" Margin="8,0" Padding="16,8"
                    Command="{Binding StopCommand}"
                    IsEnabled="{Binding IsRunning}"/>
            
            <Button Grid.Column="3" Content="ðŸŒ Ouvrir" Margin="8,0" Padding="16,8"
                    Command="{Binding OpenBrowserCommand}"
                    IsEnabled="{Binding IsRunning}"/>
        </Grid>

        <!-- Console Output -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="8" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ“‹ Console" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Content="ðŸ“‹ Copier" Margin="16,0,0,0" Padding="8,4"
                            Command="{Binding CopyLogsCommand}" FontSize="12"/>
                    <Button Content="ðŸ—‘ Effacer" Margin="8,0,0,0" Padding="8,4"
                            Command="{Binding ClearLogsCommand}" FontSize="12"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" x:Name="ConsoleScroller"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}" 
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#00FF00"
                             FontFamily="Cascadia Code, Consolas, Courier New"
                             FontSize="12"
                             IsReadOnlyCaretVisible="True"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Footer Info -->
        <StackPanel Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="â„¹ URLs des services :" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <WrapPanel>
                <TextBlock Margin="0,0,24,0">
                    <Run Text="ðŸŒ App: "/>
                    <Hyperlink Command="{Binding OpenUrlCommand}" CommandParameter="http://localhost:3500">
                        http://localhost:3500
                    </Hyperlink>
                </TextBlock>
                <TextBlock Margin="0,0,24,0">
                    <Run Text="ðŸ“¡ API: "/>
                    <Hyperlink Command="{Binding OpenUrlCommand}" CommandParameter="http://localhost:8080/swagger">
                        http://localhost:8080/swagger
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Run Text="ðŸ”Œ SignalR: "/>
                    <Hyperlink Command="{Binding OpenUrlCommand}" CommandParameter="http://localhost:5001/signalhub">
                        http://localhost:5001/signalhub
                    </Hyperlink>
                </TextBlock>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>

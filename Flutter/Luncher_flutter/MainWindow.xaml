<Window x:Class="Luncher_flutter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:Luncher_flutter"
        Title="ðŸŽ¯ SmaRTC Flutter Launcher" 
        Height="750" Width="1000"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <local:InverseBoolConverter x:Key="InverseBool" />
        
        <!-- Couleurs amÃ©liorÃ©es -->
        <SolidColorBrush x:Key="PrimaryGreen" Color="#00E676"/>
        <SolidColorBrush x:Key="PrimaryRed" Color="#FF5252"/>
        <SolidColorBrush x:Key="PrimaryOrange" Color="#FFB300"/>
        <SolidColorBrush x:Key="PrimaryPurple" Color="#E040FB"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#40C4FF"/>
        <SolidColorBrush x:Key="TextLight" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextMedium" Color="#B0BEC5"/>
        <SolidColorBrush x:Key="TextDark" Color="#78909C"/>
        <SolidColorBrush x:Key="BgDark" Color="#1A1A2E"/>
        <SolidColorBrush x:Key="BgMedium" Color="#16213E"/>
        <SolidColorBrush x:Key="BgCard" Color="#0F3460"/>
        <SolidColorBrush x:Key="BgConsole" Color="#0A0A14"/>
    </Window.Resources>

    <Grid Background="{StaticResource BgDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BgMedium}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸŽ¯" FontSize="36" VerticalAlignment="Center"/>
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="SmaRTC Flutter Launcher" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextLight}"/>
                        <TextBlock Text="GÃ©rez vos instances Flutter" FontSize="13" Foreground="{StaticResource TextMedium}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Flutter Status Badge -->
                    <Border Background="{Binding FlutterStatusColor}" CornerRadius="6" Padding="12,6" Margin="0,0,12,0">
                        <TextBlock Text="{Binding FlutterStatusText}" FontWeight="Bold" Foreground="White" FontSize="13"/>
                    </Border>
                    <TextBlock Text="{Binding FlutterVersion}" Foreground="{StaticResource TextMedium}" 
                               VerticalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Configuration -->
            <Border Grid.Column="0" Background="{StaticResource BgCard}" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ Configuration" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource TextLight}" Margin="0,0,0,20"/>

                        <!-- Projet Flutter -->
                        <TextBlock Text="Chemin du projet Flutter" Foreground="{StaticResource TextMedium}" 
                                   Margin="0,0,0,8" FontSize="13"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding FlutterProjectPath, UpdateSourceTrigger=PropertyChanged}" 
                                     IsReadOnly="True" Padding="12,10" FontSize="12"
                                     Background="#1A1A2E" Foreground="{StaticResource TextLight}" 
                                     BorderBrush="#3D5A80"/>
                            <Button Grid.Column="1" Content="ðŸ“" Margin="8,0,0,0" Command="{Binding BrowseProjectCommand}" 
                                    Padding="12,10" Background="{StaticResource PrimaryBlue}" Foreground="White"/>
                        </Grid>

                        <!-- Device Selection -->
                        <TextBlock Text="Device Flutter" Foreground="{StaticResource TextMedium}" 
                                   Margin="0,0,0,8" FontSize="13"/>
                        <ComboBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" 
                                  Margin="0,0,0,12" Padding="12,10" FontSize="13"
                                  Background="#1A1A2E" Foreground="{StaticResource TextLight}"
                                  BorderBrush="#3D5A80">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                            <Button Content="ðŸ”„ RafraÃ®chir" Command="{Binding RefreshDevicesCommand}" 
                                    Padding="12,8" Background="#3D5A80" Foreground="White" Margin="0,0,8,0"/>
                            <Button Content="ðŸ” Chercher Flutter" Command="{Binding FindFlutterManuallyCommand}" 
                                    Padding="12,8" Background="#5C6BC0" Foreground="White"/>
                        </StackPanel>

                        <Separator Background="#3D5A80" Margin="0,0,0,25"/>

                        <!-- Actions -->
                        <TextBlock Text="ðŸš€ Actions" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource TextLight}" Margin="0,0,0,15"/>
                        
                        <!-- Launch Button - VERT vif -->
                        <Button Command="{Binding LaunchFlutterCommand}" 
                                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBool}}"
                                Padding="15,14" Margin="0,0,0,12" FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                    <Setter Property="Background" Value="#00E676"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#2E7D32"/>
                                            <Setter Property="Foreground" Value="#AAA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â–¶" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Lancer Flutter"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Stop Button - ROUGE vif -->
                        <Button Command="{Binding StopFlutterCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Padding="15,14" Margin="0,0,0,12" FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                    <Setter Property="Background" Value="#FF5252"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#5D4037"/>
                                            <Setter Property="Foreground" Value="#888"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¹" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="ArrÃªter"/>
                            </StackPanel>
                        </Button>

                        <!-- Hot Reload - ORANGE -->
                        <Button Command="{Binding HotReloadCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Padding="15,14" Margin="0,0,0,12" FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                    <Setter Property="Background" Value="#FFB300"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#5D4037"/>
                                            <Setter Property="Foreground" Value="#888"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”¥" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Hot Reload"/>
                            </StackPanel>
                        </Button>

                        <!-- Hot Restart - VIOLET -->
                        <Button Command="{Binding HotRestartCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Padding="15,14" Margin="0,0,0,25" FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                    <Setter Property="Background" Value="#E040FB"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#4A148C"/>
                                            <Setter Property="Foreground" Value="#888"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â™»ï¸" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Hot Restart"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="#3D5A80" Margin="0,0,0,20"/>

                        <!-- Status avec indicateur colorÃ© -->
                        <Border Background="#1A1A2E" CornerRadius="8" Padding="15">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="14" Height="14" 
                                         Fill="{Binding StatusColor}" 
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding StatusText}" 
                                           Foreground="{StaticResource TextLight}" 
                                           FontWeight="SemiBold"
                                           Margin="12,0,0,0" FontSize="14"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Logs -->
            <Border Grid.Column="1" Background="{StaticResource BgMedium}" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“‹ Console Flutter" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource TextLight}"/>
                        <Button Content="ðŸ—‘ï¸ Clear" HorizontalAlignment="Right" Command="{Binding ClearLogsCommand}" 
                                Padding="12,6" Background="#455A64" Foreground="White"/>
                    </Grid>

                    <Border Grid.Row="1" Background="{StaticResource BgConsole}" CornerRadius="8" Padding="15">
                        <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding LogOutput}" 
                                       Foreground="#00FF88" 
                                       FontFamily="Cascadia Code, Consolas, Courier New" 
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Quick Commands -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="ðŸ©º flutter doctor" Command="{Binding RunDoctorCommand}" 
                                Padding="12,10" Margin="0,0,10,0" Background="#37474F" Foreground="White"/>
                        <Button Content="ðŸ“¦ flutter pub get" Command="{Binding RunPubGetCommand}" 
                                Padding="12,10" Margin="0,0,10,0" Background="#37474F" Foreground="White"/>
                        <Button Content="ðŸ§¹ flutter clean" Command="{Binding RunCleanCommand}" 
                                Padding="12,10" Background="#37474F" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource BgMedium}" Padding="15">
            <Grid>
                <TextBlock Text="SmaRTC Flutter Example - Room: Room_flutter | Password: 12345678" 
                           Foreground="{StaticResource TextMedium}" HorizontalAlignment="Left" 
                           VerticalAlignment="Center" FontSize="12"/>
                <TextBlock Text="Â© 2026 DeLTa-X Tunisia" 
                           Foreground="{StaticResource TextDark}" HorizontalAlignment="Right" 
                           VerticalAlignment="Center" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>

<Window x:Class="Luncher_flutter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:Luncher_flutter"
        Title="ðŸŽ¯ SmaRTC Flutter Launcher" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <local:InverseBoolConverter x:Key="InverseBool" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E1E2E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸŽ¯" FontSize="32" VerticalAlignment="Center"/>
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="SmaRTC Flutter Launcher" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="GÃ©rez vos instances Flutter" FontSize="12" Foreground="#888"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#02D9B5" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                        <TextBlock Text="Flutter" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <TextBlock Text="{Binding FlutterVersion}" Foreground="#888" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Configuration -->
            <Border Grid.Column="0" Background="#2D2D44" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ Configuration" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                        <!-- Projet Flutter -->
                        <TextBlock Text="Chemin du projet Flutter" Foreground="#AAA" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding FlutterProjectPath, UpdateSourceTrigger=PropertyChanged}" 
                                     IsReadOnly="True" Padding="10"/>
                            <Button Grid.Column="1" Content="ðŸ“" Margin="5,0,0,0" Command="{Binding BrowseProjectCommand}" 
                                    Padding="10,8"/>
                        </Grid>

                        <!-- Device -->
                        <TextBlock Text="Device" Foreground="#AAA" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" 
                                  DisplayMemberPath="Name" Margin="0,0,0,15" Padding="10"/>
                        <Button Content="ðŸ”„ RafraÃ®chir les devices" Command="{Binding RefreshDevicesCommand}" 
                                Margin="0,0,0,20" Padding="10"/>

                        <Separator Background="#444" Margin="0,0,0,20"/>

                        <!-- Actions -->
                        <TextBlock Text="ðŸš€ Actions" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
                        
                        <Button Content="â–¶ï¸ Lancer Flutter" Command="{Binding LaunchFlutterCommand}" 
                                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBool}}"
                                Background="#02D9B5" Foreground="White" FontWeight="Bold"
                                Padding="15,12" Margin="0,0,0,10"/>
                        
                        <Button Content="â¹ï¸ ArrÃªter" Command="{Binding StopFlutterCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Background="#E74C3C" Foreground="White" FontWeight="Bold"
                                Padding="15,12" Margin="0,0,0,10"/>

                        <Button Content="ðŸ”¥ Hot Reload" Command="{Binding HotReloadCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Background="#F39C12" Foreground="White" FontWeight="Bold"
                                Padding="15,12" Margin="0,0,0,10"/>

                        <Button Content="â™»ï¸ Hot Restart" Command="{Binding HotRestartCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Background="#9B59B6" Foreground="White" FontWeight="Bold"
                                Padding="15,12" Margin="0,0,0,20"/>

                        <Separator Background="#444" Margin="0,0,0,20"/>

                        <!-- Status -->
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" 
                                     Fill="{Binding StatusColor}" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding StatusText}" 
                                       Foreground="White" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Logs -->
            <Border Grid.Column="1" Background="#1E1E2E" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“‹ Console Flutter" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <Button Content="ðŸ—‘ï¸ Clear" HorizontalAlignment="Right" Command="{Binding ClearLogsCommand}" Padding="10,5"/>
                    </Grid>

                    <Border Grid.Row="1" Background="#0D0D14" CornerRadius="8" Padding="10">
                        <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding LogOutput}" 
                                       Foreground="#00FF00" 
                                       FontFamily="Consolas" 
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Quick Commands -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="flutter doctor" Command="{Binding RunDoctorCommand}" Padding="10,8" Margin="0,0,10,0"/>
                        <Button Content="flutter pub get" Command="{Binding RunPubGetCommand}" Padding="10,8" Margin="0,0,10,0"/>
                        <Button Content="flutter clean" Command="{Binding RunCleanCommand}" Padding="10,8"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#1E1E2E" Padding="15">
            <Grid>
                <TextBlock Text="SmaRTC Flutter Example - Room: Room_flutter | Password: 12345678" 
                           Foreground="#666" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="Â© 2026 DeLTa-X Tunisia" 
                           Foreground="#666" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
